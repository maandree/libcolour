# Run './configure --help' for usage information.


PKGNAME=libcolour
MAN_SECTION_SUFFIX=


list_optional_features_help ()
{
    true
}

unrecognised_argument ()
{
    option="${1}"
    case "${option}" in
	(--build | --target | --host)
	    incomplete="${option}" ;;
	(--build=*)
	    ;;
	(--target=*)
	    ;;
	(--host=*)
	    ;;
	(*)
	    ;;
    esac
}

. "$(dirname "${0}")"/mk/configure


cat <<EOF

You can now run 'make && make install'.

EOF

